{
  "manifest_version": 2,
  "name": "Hulu Ratings",
  "short_name": "Hulu Ratings",
  "homepage_url": "http://hulu.com/",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon.png",
    "19": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "*://*.hulu.com/*",
        "*://hulu.com/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "http://www.omdbapi.com/*"
  ],
  "web_accessible_resources": [
      "images/*",
      "html/*",
      "css/content.css"
  ]
}
